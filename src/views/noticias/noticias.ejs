<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <title>Notícias</title>
  </head>
  <body>
    <h1>Notícias</h1>

    <table>
      <tr>
        <td>ID</td>

        <td>Titulo</td>

        <td>Noticia</td>
      </tr>
      <% noticias.map(item => { %>
      <tr>
        <td><%= item.id_noticia %></td>
        <td><%= item.titulo %></td>
        <td><%= item.noticia %></td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
